
<h1><%= full_name(@patients) %></h1>


<h2> Prescriptions </h2>   <%= link_to "Add Prescription", new_patient_prescription_path(@patients), :class => "add" %>
<br>
<br>
<table class="table">
  <thead>
  <tr>
    <th>Medication</th>
    <th>Dosage/Schedule</th>
    <th>Dates</th>
  </tr>
  </thead>
  <tbody>
  <% @patients.prescriptions.each do |prescription| %>
    <tr>

      <td><%=link_to prescription.medication_name(prescription.medication_id), patient_prescription_path(id: prescription.medication.id) %></td>
      <td><%= prescription.dosage %></td>
      <td><%= prescription.starts_on %> - <%= prescription.ends_on %> </td>
    </tr>
  <% end %>
  </tbody>
</table>
