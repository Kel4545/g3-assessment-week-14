
<h1><%= @patients.first_name %> <%= @patients.last_name %></h1>


<h2> Prescriptions </h2>   <%= link_to "Add Presciption", new_patient_medication_path(@patients) %>
<table class="table">
  <thead>
  <tr>
    <th>Medication</th>
    <th>Dosage/Schedule</th>
    <th>Dates</th>
  </tr>
  </thead>
  <tbody>
  <% @patients.prescriptions.each do |prescription| %>
    <tr>

      <td><%= link_to prescription.name, patient_prescription_path(id: medication.id) %></td>


      <td><%= prescription.dosage %></td>

      <td><%= prescription.starts_on %> - <%= prescription.ends_on %> </td>
    </tr>
  <% end %>
  </tbody>
</table>
