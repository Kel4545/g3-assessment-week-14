<% if @medications.errors.any? %>
  <% @medications.errors.messages.each do |error| %>
    <%= error %>
  <% end %>
<% end %>

<h1>Add a Prescription to <%= @patients.first_name %> <%= @patients.last_name %></h1>

<%= form_for @medications, url: patient_medication_path(@medications) do |f| %>
  <%= f.collection_select :category, Medication.all, :id, :name %>
  <%= f.label :dosage %>
  <%= f.text_field :dosage %>
  <%= f.label :schedule %>
  <%= f.text_field :schedule %>
  <%= f.label :starts_on %>
  <%= f.date_select :starts_on, :order => [:month, :day, :year] %>
  <%= f.label :ends_on %>
  <%= f.date_select :ends_on, :order => [:month, :day, :year] %>
  <%= f.submit "Create Prescription" %>

<% end %>

