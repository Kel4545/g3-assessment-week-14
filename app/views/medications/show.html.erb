<% @medications.name %>

<h1> Prescriptions</h1>

<table class="table">
  <thead>
  <tr>
    <th>Patient</th>
    <th>Dosage/Schedule</th>
    <th>Dates</th>
    <th>Prescribed By</th>
  </tr>
  </thead>
  <tbody>
  <% @medications.prescriptions.each do |prescription| %>
    <tr>
      <td><%= link_to full_name(prescription.patient), patient_prescription_path(prescription.patient_id)  %></td>
        <td><%= prescription.dosage %></td>
        <td><%= prescription.starts_on %> - <%= prescription.ends_on %></td>
        <td><%= prescription.user_name %></td>
        </tr>
        </tbody>
        </table>
      <% end %>
